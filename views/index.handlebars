  <div class="row">
    <div class="col-md-6">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title" id="burger"><strong>New Burgers</strong></h5>
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
            <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>
          <p class="card-text"></p>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title" id="devoured"><strong>Devoured Burgers</strong></h5>
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
            <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
              data-newDevoured="{{this.devoured}}"><span class="fa fa-trash"></span></button>
            <hr>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>


</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgers">Type of burger:</label>
    <input type="text" id="burgers" name="name">
  </div>

  <button type="submit" id="submitBtn">Enter a burger you want to eat. Click the submit button</button>
</form>